{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist",
    "watch": false,
    "target": "es6",
    "typeRoots" : ["./typings"],
    "declaration": true, 
    "sourceMap": true, 
    "lib": [
      "dom",
      "es2017"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "views",
    "static"
  ]
}
